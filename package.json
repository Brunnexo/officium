{
    "build": {
        "productName": "Officium",
        "appId": "bnx.app.officium",
        "copyright": "Bruno Costa",
        "win": {
            "target": "nsis",
            "asarUnpack": [
                "officium-modules/**/*"
            ]
        },
        "nsis": {
            "createDesktopShortcut": "always"
        },
        "directories": {
            "buildResources": "build",
            "output": "dist"
        }
    },
    "name": "officium",
    "version": "0.0.1",
    "description": "Officium",
    "main": "exec.js",
    "scripts": {
        "watch": "tsc -w",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": "Bruno Costa",
    "license": "ISC",
    "dependencies": {
        "bootstrap": "^4.5.3",
        "chart.js": "^2.9.4",
        "mssql": "^6.2.3"
    },
    "devDependencies": {
        "@types/chart.js": "^2.9.27",
        "@types/crypto-js": "^4.0.1",
        "@types/tedious": "^4.0.2",
        "electron": "^11.1.0",
        "electron-builder": "^22.9.1",
        "electron-packager": "^15.2.0",
        "typescript": "^4.0.5"
    }
}
